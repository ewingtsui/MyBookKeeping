@model   MyBookKeeping.Models.ViewModels.BookingsViewModels

@{
    ViewBag.Title = "Create";
}

@*@string.Format("您傳進來的是{0}", Model.Message)*@

<h2>新增記帳本</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="well">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(d => d.BookType, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(d => d.BookType, new List<SelectListItem>
                    {
                        new SelectListItem {Text="支出",Value="0" },
                        new SelectListItem {Text="收入",Value="1"}
                     }, "請選擇", new { @class = "form-control" })
                    @Html.ValidationMessageFor(d=>d.BookType, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(d=>d.BookDate, htmlAttributes:new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(d => d.BookDate, new { htmlAttributes = new { @class = "form-control", id = "date-picker", placeholder = "yyyy-mm-dd" } })
                    @Html.ValidationMessageFor(d => d.BookDate,"",new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(d => d.BookAmount, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(d => d.BookAmount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(d => d.BookAmount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(d => d.BookMemo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(d => d.BookMemo, htmlAttributes : new { @class = "form-control" } )
                    @Html.ValidationMessageFor(d => d.BookMemo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10 col-md-offset-2">
                    <button type="submit" value="Create" class="btn btn-default">送　出</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <link href="~/Content/bootstrap-datepicker3.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-datepicker/bootstrap-datepicker.zh-TW.min.js"></script>
    <script src="~/Scripts/myself/MyBookKeeping.js"></script>
}


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

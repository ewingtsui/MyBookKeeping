@model   IEnumerable<MyBookKeeping.Models.ViewModels.BookingsViewModels>

<div class="col-md-12">
    <table class="table table-bordered table-hover table-responsive">
        <tr>
            <th>#</th>
            <th>GUID</th>
            <th>類別</th>
            <th>日期</th>
            <th>金額</th>
            <th width="40%">備註</th>
        </tr>
        @{
            int i = 0;
            foreach (var item in Model)
            {
                <tr>
                    <td>@(++i)</td>
                    <td>@item.ID</td>
                    <td>@item.BookType</td>
                    <td>@item.BookDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.BookAmount.ToString("###,###")</td>
                    <td><textarea style="width:300px;height:100px;">@item.BookMemo<</textarea>></td>
                </tr>
            }
        }
    </table>
</div>
